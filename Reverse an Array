#include <stdio.h>
void revrese_array(int array[],int n ){
   for(int i=0;i<n/2;i++){
    int b=array[i];
    array[i]=array[n-1-i];
    array[n-1-i]=b;
   }
   return ;
}
int main() {
    printf("Enter the number of elements in array : ");
    int n;
    scanf("%d",&n);
    int array[n];
    for(int i=0;i<n;i++){
        printf("Enter the value of Arrat[%d]",i);
        scanf("%d",&array[i]);
    }
    revrese_array(array,n);
    printf("reversed array is :\n");
     for(int i=0;i<n;i++){
        printf("The value of Array[%d] : %d\n",i,array[i]);
    }


    return 0;
}
