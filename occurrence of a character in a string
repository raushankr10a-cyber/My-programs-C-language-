#include<stdio.h>
#include<string.h>
char* check_char(char array[]){
    printf("Enter the character whose occurrence do you want to check : ");
    char a;
    scanf(" %c",&a);
    int c=0;
    for(int i=0;array[i] != '\0';i++){
        if(array[i]==a){
            c++;
        }
    }
    static char msg[100];
    if(c==0){
        sprintf(msg,"No, %c does not occur in the string.",a);
    }
    else {
        sprintf(msg,"yes, %c ocuurs in the string %d times.",a,c);
    }
    return msg;
}
int main(){
    printf("Enter your string : ");
    char pass[100];
    fgets(pass,sizeof(pass),stdin);
    int x = strcspn(pass,"\n");
    pass[x]='\0';
    printf("%s",check_char(pass));
    return 0;
}
