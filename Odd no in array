#include <stdio.h>
void ood_numbers(int array[10][10],int m,int n){
    printf("Odd numbers are : \n");
    int c=0;
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            int x = array[i][j]%2;
            if(x!=0){
                c++;
                printf("%d\t",array[i][j]);
            }
        }
    }
    printf("Total number of Odd numbers : %d",c);
    return ;
}
int main() {
    const int m,n;
    printf("Enter the number of Rows : ");
    scanf("%d",&m);
    printf("Enter the number of Columns : ");
    scanf("%d",&n);
    int a[10][10];
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            printf("Enter the value of a[%d][%d] : ",i,j);
            scanf("%d",&a[i][j]);
        }
        printf("\n");
    }
    ood_numbers(a,m,n);
    return 0;
}
