#include <stdio.h>
int sum_digits(int n){
    if(n==0){
        return 0;
    }
int sum = (n%10)+sum_digits(n/10);
return sum;
}
int main() {
    printf("Enter the number whose sum of digits you want to find :");
    int x;
    scanf("%d",&x);
    printf("Sum of digits : %d",sum_digits(x));
    
    return 0;
}
